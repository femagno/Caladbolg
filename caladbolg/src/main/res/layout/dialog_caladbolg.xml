<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout android:id="@+id/container_color_indicator"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.caladbolg.ColorIndicatorView
            android:id="@+id/view_color_indicator"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:background_color="#0000ff"
            app:inner_margin="10dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="16dp">
            <EditText android:id="@+id/edit_text_color_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:background="@color/transparent"
                android:textColor="@color/color_code_text"
                android:textSize="@dimen/color_code_text_size"
                android:inputType="none"/>
            <TextView android:id="@+id/text_color_code_params"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/color_code_params_text"
                android:textSize="@dimen/color_code_params_text_size"
                tools:text="R:000 G:000 B:000 A:000"/>
        </LinearLayout>
    </LinearLayout>

    <SeekBar android:id="@+id/seek_bar_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:progress="255"
        android:max="255"/>

    <com.caladbolg.ColorPickerView android:id="@+id/view_color_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/container_color_indicator"
        android:layout_above="@id/seek_bar_alpha" />
</RelativeLayout>